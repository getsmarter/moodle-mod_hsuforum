{{=<% %>=}}
<core-format-text component="mod_ouwiki" componentId="<% cmid %>">
    <ion-list>
        <ion-list-header>
            <p>
                <span><%^replycount%>0<%/replycount%> <% replycount %> <% replylabel %> for post</span>
            </p>
        </ion-list-header>
            <ion-card *ngFor="let reply of CONTENT_OTHERDATA.replies">
                <ion-card-content>
                        <ion-item>
                            <p style="font-size: 11px;">Post by {{ reply.firstname }} {{ reply.lastname }}</p>
                                <h6 [innerHTML]=reply.message></h6>
                        </ion-item>
                </ion-card-content>
            </ion-card>
    </ion-list>
</core-format-text>